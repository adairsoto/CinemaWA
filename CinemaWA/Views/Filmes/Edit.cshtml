@model CinemaWA.Models.Filme

@{
    ViewData["Title"] = "Edit";
}

<body style="background-color:lightgray">
    <h4>Editar Filme</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FilmeId" />
                <div class="form-group">
                    <label asp-for="FilmeNome" class="control-label"></label>
                    <input asp-for="FilmeNome" class="form-control" />
                    <span asp-validation-for="FilmeNome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Elenco" class="control-label"></label>
                    <input asp-for="Elenco" class="form-control" />
                    <span asp-validation-for="Elenco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tipo" class="control-label"></label>
                    <input asp-for="Tipo" class="form-control" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sinopse" class="control-label"></label>
                    <input asp-for="Sinopse" class="form-control" />
                    <span asp-validation-for="Sinopse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" /> |
                    <a class="btn btn-dark" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
