@model CinemaWA.Models.Filme

@{
    ViewData["Title"] = "Delete";
}
<body style="background-color:lightgray">
<h3>Deseja realmente remover este filme?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FilmeNome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FilmeNome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Elenco)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Elenco)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Tipo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Sinopse)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Sinopse)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="FilmeId" />
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            <a class="btn btn-dark" asp-action="Index">Voltar</a>
        </form>
    </div>
</body>
