@model CinemaWA.Models.Cliente

@{
    ViewData["Title"] = "Create";
}


<body style="background-color:lightgray">
    <form asp-action="Create">
        <h4>Cadastrar Cliente</h4>
        <hr />
        <div class="row">
            <div class="col-md-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ClienteNome" class="control-label"></label>
                        <input asp-for="ClienteNome" class="form-control" />
                        <span asp-validation-for="ClienteNome" class="text-danger"></span>
                    </div>
            </div>
            <div class="col-md-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" class="form-control" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
            </div>
            <div class="col-md-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
            </div>
            <div class="col-md-1 mt-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    </div>
            </div>
            <div class="col-md-1 mt-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <a class="btn btn-dark" asp-action="Index">Voltar</a>
                    </div>
            </div>
        </div>
    </form>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
