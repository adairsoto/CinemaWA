@model CinemaWA.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<body style="background-color:lightgray">

    <div>
        <h4>Detalhes da Reserva</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Cliente.ClienteNome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Sessao)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Sessao.Sessaoinfo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Assento)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Assento.NumeroAssento)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ReservaId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
