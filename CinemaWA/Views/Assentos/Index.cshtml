@model IEnumerable<CinemaWA.Models.Assento>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-muted">Assentos</h1>

<p>
    <a asp-action="Create">Cadastrar Assento</a>
</p>
<table style="background-color:lightgray" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroAssento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sala.SalaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroAssento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AssentoId"><img src=~/edit.png></a> |
                <a asp-action="Details" asp-route-id="@item.AssentoId"><img src=~/details.png></a> |
                <a asp-action="Delete" asp-route-id="@item.AssentoId"><img src=~/delete.png></a>
            </td>
        </tr>
}
    </tbody>
</table>
