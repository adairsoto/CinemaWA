@model CinemaWA.Models.Assento

@{
    ViewData["Title"] = "Create";
}


<h4>Cadastrar Assento</h4>
<hr />
<div class="row">
    <div class="col-md-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SalaId" class="control-label"></label>
                <select asp-for="SalaId" class ="form-control" asp-items="ViewBag.SalaId"></select>
            </div>
        </form>
    </div>
    <div class="col-md-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroAssento" class="control-label"></label>
                <input asp-for="NumeroAssento" class="form-control" />
                <span asp-validation-for="NumeroAssento" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="col-md-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssentoInfo" class="control-label"></label>
                <input asp-for="AssentoInfo" class="form-control" />
                <span asp-validation-for="AssentoInfo" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="col-md-1 mt-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-1 mt-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <a class="btn btn-dark" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
